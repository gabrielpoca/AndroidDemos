<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" style="@style/Background">
    <include layout="@layout/title" />
    <ListView android:id="@android:id/list" android:layout_weight="2"
		android:drawSelectorOnTop="false" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:choiceMode="multipleChoice"
		style="@style/List" />
    <TextView android:id="@android:id/empty" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:paddingLeft="15sp"
		android:paddingTop="15sp" android:background="#FFF" android:textSize="25sp"
		android:text="@string/empty" />
    <include layout="@layout/insert_msg_buttons"/>
</LinearLayout>